<Window TextBoxBase.TextChanged="Window_TextChanged" 
        x:Class="WpfRoutedEvent_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged">

        <RadioButton x:Name="radBut1" Content="Обработка события в Textbox" Margin="10,20,0,0"/>
        <RadioButton x:Name="radBut2" Content="Обработка события в Grid" Margin="10,50,0,0"/>
        <RadioButton x:Name="radBut3" Content="Обработка события в Window" Margin="10,80,0,0"/>
        
        <TextBox x:Name="textBox1" Text="" TextWrapping="Wrap" TextChanged="textBox1_TextChanged" Margin="10,10,10,0" Height="30" HorizontalAlignment="Stretch" />

    </Grid>
</Window>
