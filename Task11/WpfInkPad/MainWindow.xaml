<Window x:Class="WpfInkPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfInkPad"
        mc:Ignorable="d"
        Title="Ink Pad" Height="550" Width="370"
        Background="LightGray" >
    <Grid>
        <InkCanvas x:Name="inkCanvas1" Margin="0,0,0,0" Background="LightYellow"/>
        <Button x:Name="button1" Content="Clear" Click="button1_Click" Height="20" Width="50" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
        <Button x:Name="button2" Content="Close" Click="button2_Click" Width="50" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
    </Grid>
</Window>
