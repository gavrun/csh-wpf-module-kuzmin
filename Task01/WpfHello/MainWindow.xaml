<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="280" Width="400"
        MinHeight="250" MinWidth="300" Closing="Window_Closing">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click" ></MenuItem>
            </MenuItem>
        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Center" VerticalAlignment="Top">Start</Label>
        <TextBox x:Name="setTex" HorizontalAlignment="Left" Margin="225,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="setTex_TextChanged"/>
        <Label x:Name="retLabel" Content="" HorizontalAlignment="Left" Margin="225,129,0,0" VerticalAlignment="Top"/>
        <Button x:Name="setBut" Content="Set Name" HorizontalAlignment="Left" Margin="81,58,0,0" VerticalAlignment="Top" Click="setBut_Click"/>
        <Button x:Name="retBut" Content="Ret Name" HorizontalAlignment="Left" Margin="81,132,0,0" VerticalAlignment="Top" Click="retBut_Click"/>
    </Grid>

</Window>
