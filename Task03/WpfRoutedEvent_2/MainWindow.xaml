<Window x:Class="WpfRoutedEvent_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Margin="20,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <StackPanel ButtonBase.Click="StackPanel_Click" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Width="100"
                    Margin="20,40,0,0" >
            <Button x:Name="butAdd" Content="x + x" />
            <Button x:Name="butMult" Content="x * x" />
            <Button x:Name="butSqrt" Content="√x" />
        </StackPanel>
    </Grid>
</Window>
